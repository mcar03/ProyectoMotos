<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/degradado_login"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="180dp"
            app:cardCornerRadius="75dp"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            tools:ignore="MissingConstraints" >

            <ImageView
                android:id="@+id/imageViewLogoLogin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:layout_gravity="center"
                app:srcCompat="@drawable/userr" />
        </androidx.cardview.widget.CardView>

        <EditText
            android:id="@+id/editTextOlvidoContrasenaUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:ems="10"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:hint="Correo Electronico registrado"
            android:textSize="20sp"
            android:inputType="textEmailAddress"
            android:minHeight="48dp"
            android:text="" />


        <Button
            android:id="@+id/buttonEnviarOlvidoContrasena"
            android:layout_width="200dp"
            android:textSize="17sp"
            android:layout_gravity="end"
            android:layout_margin="15dp"
            android:backgroundTint="#313131"
            android:layout_height="wrap_content"
            android:text="Enviar" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>