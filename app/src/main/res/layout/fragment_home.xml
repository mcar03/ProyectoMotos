<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.FragmentHome">

    <!-- Fondo con un gradiente atractivo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Título atractivo centrado -->
        <TextView
            android:id="@+id/home_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bienvenidos a mi app de motos"
            android:textSize="28sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="64dp"/>

        <!-- Subtítulo debajo del título -->
        <TextView
            android:id="@+id/home_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Explora y descubre motos interesantes."
            android:layout_gravity="center"
            android:textSize="18sp"
            android:textColor="#D3D3D3"
            android:gravity="center"
            android:layout_marginTop="8dp"/>

        <!-- Espacio para la imagen en el centro -->
        <ImageView
            android:id="@+id/central_image"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:src="@drawable/mt"
            android:contentDescription="imagen de una yamaha MT"
            android:layout_gravity="center"/>

        <!-- Caja de texto con información adicional -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#FFFFFF">

            <!-- Contenido dentro del CardView -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/card_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Conoce más"
                    android:textSize="20sp"
                    android:textColor="#333333"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/card_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/aqu_encontrar_s_informaci_n_que_te_ayudar_a_aprovechar_mejor_la_app_y_explorar_nuevas_funcionalidades"
                    android:textSize="14sp"
                    android:textColor="#7A7A7A"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
